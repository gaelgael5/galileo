{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://Pickup.fr/carto/schemas/entities/ModuleApplication",
  "type": "object",
  "description": "Module de l'application",
  "required": [
    "Target"
  ],
  "properties": {
    "Target": {
      "type": "string",
      "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
    },
    "Referentials": {
      "items": {
        "$ref": "#/definitions/ModuleApplication"
      }
    }
  },
  "definitions": {
    "ModuleApplication": {
      "type": "object",
      "required": [
        "Name",
        "Label",
        "Id"
      ],
      "properties": {
        "Name": {
          "type": "string",
          "description": "Specify the functional name of the entity",
          "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
        },
        "Label": {
          "type": "string",
          "description": "Specify the label for this entity",
          "pattern": ""
        },
        "Description": {
          "type": "string",
          "description": "Specify the description for this entity",
          "pattern": ""
        },
        "Id": {
          "type": "string",
          "description": "Specify the key of the entity",
          "pattern": ""
        }
      }
    }
  }
}