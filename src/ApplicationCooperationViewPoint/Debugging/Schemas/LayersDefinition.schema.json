{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://Pickup.fr/carto/schemas/LayersDefinition",
  "title": "LayersDefinition",
  "type": "object",
  "properties": {
    "Layers": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/LayerDefinition"
      }
    }
  },
  "definitions": {
    "LayerDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Name"
      ],
      "properties": {
        "Name": {
          "type": "string"
        },
        "Elements": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/ElementDefinition"
          }
        }
      }
    },
    "ElementDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Name"
      ],
      "properties": {
        "Name": {
          "type": "string",
          "description": "element's name"
        },
        "Concepts": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/EntityTypeDefinition"
          }
        }
      }
    },
    "EntityTypeDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Name"
      ],
      "properties": {
        "Name": {
          "type": "string"
        },
        "Enabled": {
          "type": "boolean"
        }
      }
    }
  }
}