{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://Pickup.fr/carto/schemas/links/ConceptHasApplication",
  "type": "object",
  "description": "Application are grouped by concept",
  "required": [
    "Target"
  ],
  "properties": {
    "Target": {
      "type": "string",
      "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
    },
    "Referentials": {
      "items": {
        "$ref": "#/definitions/ConceptHasApplication"
      }
    }
  },
  "definitions": {
    "ConceptHasApplication": {
      "type": "object",
      "required": [
        "Name",
        "Label",
        "Id",
        "OriginLink",
        "TargetLink"
      ],
      "properties": {
        "Name": {
          "type": "string",
          "description": "Specify the functional name of the entity",
          "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
        },
        "Label": {
          "type": "string",
          "description": "Specify the label for this relationship",
          "pattern": ""
        },
        "Description": {
          "type": "string",
          "description": "Specify the description for this relationship",
          "pattern": ""
        },
        "Id": {
          "type": "string",
          "description": "Specify the key of the entity",
          "pattern": ""
        },
        "OriginLink": {
          "type": "object",
          "required": [
            "Name"
          ],
          "properties": {
            "Name": {
              "type": "string",
              "description": "Specify the origin reference.",
              "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
            }
          }
        },
        "TargetLink": {
          "type": "object",
          "required": [
            "Name"
          ],
          "properties": {
            "Name": {
              "type": "string",
              "description": "Specify the target reference",
              "pattern": "^[a-zA-Z]+[a-zA-Z0-9_]+$"
            }
          }
        }
      }
    }
  }
}